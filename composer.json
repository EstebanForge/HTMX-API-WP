{
    "name": "estebanforge/api-for-htmx",
    "description": "Add an API endpoint to WordPress to support HTMX-powered themes or plugins on your site.",
    "type": "wordpress-plugin",
    "version": "1.3.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Esteban Cuevas",
            "email": "esteban@actitud.xyz"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "post-install-cmd": [
            "@cs-fix"
        ],
        "post-update-cmd": [
            "@cs-fix"
        ]
    },
    "autoload": {
        "psr-4": {
            "HXWP\\": "src/"
        },
        "files": [
            "includes/helpers.php",
            "api-for-htmx.php"
        ]
    }
}
